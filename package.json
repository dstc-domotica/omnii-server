{
	"name": "omnii-server",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bun drizzle-kit migrate",
		"db:studio": "bunx drizzle-kit studio",
		"db:drop": "bunx drizzle-kit drop",
		"check": "bunx biome check --write",
		"proto:generate": "mkdir -p ./src/grpc/generated && ./node_modules/.bin/grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin --ts_out=grpc_js:./src/grpc/generated --grpc_out=grpc_js:./src/grpc/generated --js_out=import_style=commonjs,binary:./src/grpc/generated -I ../../proto ../../proto/omnnii.proto"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.14.3",
		"@grpc/proto-loader": "^0.8.0",
		"@hono/zod-openapi": "latest",
		"@libsql/client": "^0.17.0",
		"@scalar/hono-api-reference": "latest",
		"@types/bun": "^1.3.6",
		"drizzle-orm": "^0.45.1",
		"google-protobuf": "^4.0.1",
		"hono": "^4.11.4",
		"postgres": "^3.4.8",
		"zod": "latest"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"bun-types": "latest",
		"drizzle-kit": "^0.31.8",
		"grpc-tools": "^1.13.1",
		"grpc_tools_node_protoc_ts": "^5.3.3",
		"protoc": "^33.4.0"
	}
}
