{
  "name": "omnii-monorepo",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "db:generate": "turbo -F backend db:generate",
    "db:migrate": "turbo -F backend db:migrate",
    "db:migrate:dev": "turbo -F backend db:migrate:dev",
    "db:studio": "turbo -F backend db:studio",
    "db:push": "turbo -F backend db:push"
  },
  "devDependencies": {
    "turbo": "^2.7.2"
  }
}
